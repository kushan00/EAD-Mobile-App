<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayout">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginTop="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:background="@drawable/cv1"
            android:padding="12dp">

            <Button
                android:id="@+id/buttonEditOrder2"
                android:layout_width="142dp"
                android:layout_height="45dp"
                android:layout_weight="1.0"
                android:adjustViewBounds="true"
                android:background="@null"
                android:contentDescription="@string/save"
                android:hint="Edit"
                android:scaleType="fitCenter"
                android:src="@drawable/diskette1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.174"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customer_end_city_txt"
                app:layout_constraintVertical_bias="0.508" />

            <Button
                android:id="@+id/buttonEditOrder3"
                android:layout_width="142dp"
                android:layout_height="45dp"
                android:layout_weight="1.0"
                android:adjustViewBounds="true"
                android:background="@null"
                android:contentDescription="@string/save"
                android:hint="cancel"
                android:scaleType="fitCenter"
                android:src="@drawable/diskette1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.843"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customer_end_city_txt"
                app:layout_constraintVertical_bias="0.526" />

            <TextView
                android:id="@+id/customer_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="1"
                android:textColor="#000"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.128" />

            <TextView
                android:id="@+id/customer_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="Resevation ID"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/customer_phone_txt"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/customer_id_txt"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/customer_start_city_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Start City"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/customer_name_txt"
                app:layout_constraintTop_toBottomOf="@+id/customer_name_txt"
                app:layout_constraintVertical_bias="0.037" />

            <TextView
                android:id="@+id/customer_end_city_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:layout_marginTop="12dp"
                android:text="End City"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/customer_start_city_txt"
                app:layout_constraintTop_toBottomOf="@+id/customer_name_txt" />

            <TextView
                android:id="@+id/customer_Time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Time"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.655"
                app:layout_constraintStart_toEndOf="@+id/customer_end_city_txt"
                app:layout_constraintTop_toBottomOf="@+id/customer_phone_txt" />

            <TextView
                android:id="@+id/customer_phone_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Train Name"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>